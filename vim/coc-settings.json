{
  "suggest.noselect": true,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index", "--header-insertion=never"],
      "rootPatterns":["compile_flags.txt", "compile_commands.json", ".vim/", ".git/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "bash":{
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "nimlsp": {
        "command": "nimlsp",
        "rootPatterns": ["*.nimble"],
        "filetypes": ["nim"],
        "trace.server": "verbose",
        "enable": true
    }
  },
  "snippets.priority": 5,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "sourcekit.commandPath": "/usr/local/bin/sourcekit-lsp"
}
