{
  "suggest.noselect": true,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "languageserver": {
    "bash":{
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "snippets.priority": 5,
  "clangd.arguments": ["--background-index", "--header-insertion=never"],
  "sourcekit.commandPath": "/usr/local/bin/sourcekit-lsp"
}
